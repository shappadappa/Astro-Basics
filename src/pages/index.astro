---
import Layout from '../layouts/Layout.astro';
import { db, app } from '../firebase/server';
import { getAuth } from "firebase-admin/auth"
import SongCard from '../components/SongCard';

const auth = getAuth(app)
const sessionCookie = Astro.cookies.get("session")

if(!sessionCookie){
	return Astro.redirect("/login")
}

let user = {}
try{
	const decodedCookie = await auth.verifySessionCookie(sessionCookie.value)

	user = await auth.getUser(decodedCookie.uid)
} catch(error){
	Astro.cookies.delete("session")
	return Astro.redirect("/login")
}

const userRef = db.collection("users").doc(user.uid)
const userDoc = (await userRef.get()).data()

const songsRef = db.collection("songs")
const songsSnapshot = await songsRef.get()
const songs = songsSnapshot.docs.map(doc => ({
	id: doc.id,
	...doc.data()
}))
---

<Layout title="Astro Basics">
	<main>
		<h1>Welcome to <span class="text-gradient">Musical Stockpile</span>, <br />{user.displayName}</h1>
		<p>
			The place for sharing your favourite songs, with your favourite people.

			<br /><br />Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quia earum possimus iste? Sunt velit aliquam laboriosam provident in officia animi.
		
			<a href="/add"><button>Add a Song ðŸŽµ</button></a>
		</p>

		{songs && 
			<div class="songs-container">
				<h2>ðŸ”¥ Popular Songs:</h2>
				<div class="songs">
					{songs.map(song =>(
						<SongCard client:only="react" loggedInUserId={user.uid} userId={song.userUid} spotifyId={song.spotifyId} sessionCookie={sessionCookie.value} alreadyLiked={userDoc.likes.includes(song.spotifyId)} forceRefresh={false} />
					))}
				</div>
			</div>
		}
	</main>
</Layout>

<style>
	a{
		text-decoration: none;
		color: inherit;
	}
	a:hover{
		text-decoration: none;
	}
	button{
		background: linear-gradient(90deg, #eee, #a9eca9);
		display: block;
		position: relative;
		margin: 1rem auto;
		padding: 0.5rem;
		border-radius: 0.5rem;
		font-weight: bold;
		border: 1px solid limegreen;
		cursor: pointer;
		font-size: 1.25rem;
		outline: 0px solid limegreen;
	}
	button::after{
		content: "";
		width: 100%;
		height: 2px;
		background: limegreen;
		position: absolute;
		bottom: 5px;
		left: 0;
		transform: scaleX(0);
		transform-origin: left;
		transition: 0.25s ease-out;
	}
	button:hover{
		animation: outline-ripple 0.5s ease-out;
	}
	button:hover::after{
		transform: scaleX(1);
		transition: 0.5s ease-out;
	}

	@keyframes outline-ripple{
		0%{
			outline-width: 2px;
		}
		100%{
			outline-offset: 1rem;
			outline-color: rgba(50, 205, 50, 0)
		}
	}
</style>
